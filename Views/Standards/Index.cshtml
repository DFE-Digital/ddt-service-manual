@{
    ViewData["Title"] = "Standards";
    Layout = "_TopicPage";
}

@section Breadcrumbs {
    <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="/">Home</a>
    </li>
    <li class="govuk-breadcrumbs__list-item" aria-current="page">Standards</li>
}

@section Masthead {
    <div class="page-masthead page-masthead--topic-page">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl">Standards</h1>
                    <p class="govuk-body-l">
                        The standards that apply and that you need to meet when delivering services in DfE.
                    </p>
                </div>
            </div>
        </div>
    </div>
}

@section Topics {
    <div class="dfe-topic-link">
        <a href="https://www.gov.uk/guidance/the-technology-code-of-practice" class="dfe-topic-link__link" target="_blank" rel="noopener noreferrer">
            Technology Code of Practice
        </a>
        <p class="dfe-topic-link__description">
            Includes design and build criteria, buying technology, user-centered design, cost effectiveness and consistent implementation
        </p>
    </div>
    <div class="dfe-topic-link">
        <a href="https://apply-the-service-standard.education.gov.uk/" class="dfe-topic-link__link" target="_blank" rel="noopener noreferrer">
            Government Service Standard
        </a>
        <p class="dfe-topic-link__description">
            Includes the 14 service standard criteria, assessment guidance, and requirements for public-facing services
        </p>
    </div>
    <div class="dfe-topic-link">
        <a href="@Url.Action("Index", "DDTStandards")" class="dfe-topic-link__link">
            DDT Standards
        </a>
        <p class="dfe-topic-link__description">
            Includes digital, data and technology standards specific to DfE covering quality, security, accessibility, and user experience
        </p>
    </div>
}

@section Guidance {
    <div class="dfe-guidance-link">
        <a href="/standards/standards-lifecycle" class="dfe-guidance-link__link">
            Standards lifecycle
        </a>
        <p class="dfe-guidance-link__description">Understand the lifecycle of a standard, from concept to publication and use across DfE.</p>
    </div>
    <div class="dfe-guidance-link">
        <a href="/standards/create-publish-standards" class="dfe-guidance-link__link">
            Create and publish a standard
        </a>
        <p class="dfe-guidance-link__description">Guidance for creating and publishing standards in DfE.</p>
    </div>
    <div class="dfe-guidance-link">
        <a href="/standards/compliance-assurance" class="dfe-guidance-link__link">
            Standards compliance and assurance
        </a>
        <p class="dfe-guidance-link__description">Guidance on declaring compliance with standards in the SHCA.</p>
    </div>
}

@section Toolkits {
    <div class="dfe-toolkit-card">
        <a href="#" class="dfe-toolkit-card__link">
            <h3 class="dfe-toolkit-card__title">Standards compliance checklist</h3>
            <p class="dfe-toolkit-card__description">A downloadable checklist to help teams ensure they meet all relevant standards throughout service delivery.</p>
            <div class="dfe-toolkit-card__meta">PDF • 2 pages</div>
        </a>
    </div>
    <div class="dfe-toolkit-card">
        <a href="#" class="dfe-toolkit-card__link">
            <h3 class="dfe-toolkit-card__title">Standards gap analysis template</h3>
            <p class="dfe-toolkit-card__description">Template to identify gaps between current practice and required standards, with action planning guidance.</p>
            <div class="dfe-toolkit-card__meta">Excel • Template</div>
        </a>
    </div>
    <div class="dfe-toolkit-card">
        <a href="#" class="dfe-toolkit-card__link">
            <h3 class="dfe-toolkit-card__title">Assessment preparation pack</h3>
            <p class="dfe-toolkit-card__description">Evidence templates and guidance documents to help teams prepare for service standard assessments.</p>
            <div class="dfe-toolkit-card__meta">ZIP • Multiple files</div>
        </a>
    </div>
}

@section HowToGuides {
    <div class="dfe-how-to-card">
        <a href="#" class="dfe-how-to-card__link">How to identify which standards apply to your service</a>
        <p class="dfe-how-to-card__description">Step-by-step guidance on determining which standards your service needs to meet based on type, stage, and user needs.</p>
        <div class="dfe-how-to-card__duration">10 min read</div>
    </div>
    <div class="dfe-how-to-card">
        <a href="#" class="dfe-how-to-card__link">How to conduct a standards gap analysis</a>
        <p class="dfe-how-to-card__description">Learn how to systematically assess your service against relevant standards and identify areas for improvement.</p>
        <div class="dfe-how-to-card__duration">15 min read</div>
    </div>
    <div class="dfe-how-to-card">
        <a href="#" class="dfe-how-to-card__link">How to prepare for a service standard assessment</a>
        <p class="dfe-how-to-card__description">Practical tips and checklists to help your team prepare effectively for a service standard assessment.</p>
        <div class="dfe-how-to-card__duration">20 min read</div>
    </div>
}

@section RelatedContent {
    <ul class="dfe-related-content">
        <li class="dfe-related-content__item">
            <a href="#" class="dfe-related-content__link">Standards forum</a>
        </li>
        <li class="dfe-related-content__item">
            <a href="#" class="dfe-related-content__link">Contact the standards team</a>
        </li>
        <li class="dfe-related-content__item">
            <a href="#" class="dfe-related-content__link">Standards roadmap and updates</a>
        </li>
        <li class="dfe-related-content__item">
            <a href="#" class="dfe-related-content__link">Getting started with standards</a>
        </li>
    </ul>
}
