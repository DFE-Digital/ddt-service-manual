<!DOCTYPE html>
<html lang="en" class="govuk-template--rebranded">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DfE Service Manual</title>
    <link rel="stylesheet" href="~/css/govuk-frontend.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/moj-frontend.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inter.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/service-manual.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="~/favicon.ico" color="#0b0c0c" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon.ico" />
    <meta name="theme-color" content="#0b0c0c" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="format-detection" content="telephone=no" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="govuk-template__body">
  <script>
    document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');
  </script>

  <a href="#main-content" class="govuk-skip-link">Skip to main content</a>
  
  @await Html.PartialAsync("_Header")

  @if (IsSectionDefined("Breadcrumbs"))
  {
    <div class="govuk-width-container">
      <nav class="govuk-breadcrumbs" aria-label="Breadcrumb">
        <ol class="govuk-breadcrumbs__list">
          @RenderSection("Breadcrumbs", required: false)
        </ol>
      </nav>
    </div>
  }

  @RenderSection("Masthead", required: false)

  <main class="govuk-main-wrapper" id="main-content" role="main">
    @if (IsSectionDefined("Masthead"))
    {
      <div class="content-wrapper">
        <div class="govuk-width-container">
          @RenderBody()
        </div>
      </div>
    }
    else
    {
      <div class="govuk-width-container">
        @RenderBody()
      </div>
    }
  </main>

  @await Html.PartialAsync("_Footer")

  @await RenderSectionAsync("Scripts", required: false)

  <script type="module" src="/js/govuk-frontend.min.js"></script>
  <script src="/js/moj-frontend.min.js"></script>
  <script src="/js/site.js"></script>
  <script type="module">
    import { initAll } from '/js/govuk-frontend.min.js'
    initAll()
  </script>
</body>
</html>

