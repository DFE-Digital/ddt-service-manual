@{
    Layout = "_Layout";
}

<div class="govuk-width-container govuk-!-margin-top-9 govuk-!-margin-bottom-9">
    @if (IsSectionDefined("Breadcrumbs"))
    {
        <nav class="govuk-breadcrumbs" aria-label="Breadcrumbs">
            <ol class="govuk-breadcrumbs__list">
                @RenderSection("Breadcrumbs", required: false)
            </ol>
        </nav>
    }

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            @RenderBody()

            @if (IsSectionDefined("MostViewed"))
            {
                <h2 class="govuk-heading-l govuk-!-margin-top-9">Most viewed</h2>
                <ul class="govuk-list">
                    @RenderSection("MostViewed", required: false)
                </ul>
            }

            @if (IsSectionDefined("Topics"))
            {
                <h2 class="govuk-heading-l govuk-!-margin-top-9">Topics</h2>
                <div class="topic-list">
                    @RenderSection("Topics", required: false)
                </div>
            }
        </div>
    </div>
</div>

