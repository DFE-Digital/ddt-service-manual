@model (string Heading, string? Description, List<(string Title, string Description, string Url, string Category)> Resources)

<div class="resource-cards-section">
    <h2 class="govuk-heading-l">@Model.Heading</h2>
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <p class="govuk-body">@Model.Description</p>
    }
    
    <div class="resource-cards-grid">
        @foreach (var resource in Model.Resources)
        {
            <div class="resource-card">
                <div class="resource-card-header">
                    <p class="resource-card-category">@resource.Category</p>
                </div>
                <h3 class="resource-card-title">
                    <a href="@resource.Url" class="govuk-link">@resource.Title</a>
                </h3>
                <p class="resource-card-description">@resource.Description</p>
            </div>
        }
    </div>
</div>

