                <ul class="dfe-related-navigation__link-list">
                    <li class="dfe-related-navigation__link">
                        <a class="govuk-link dfe-related-navigation__section-link dfe-related-navigation__section-link--sidebar" href="/roadmap">Roadmap</a>
                    </li>
                    <li class="dfe-related-navigation__link">
                        <a class="govuk-link dfe-related-navigation__section-link dfe-related-navigation__section-link--sidebar" href="https://www.gov.uk/service-manual" target="_blank" rel="noopener noreferrer">GOVUK Service Manual</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}

